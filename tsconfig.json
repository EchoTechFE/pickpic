{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "miniprogram-api-typings", "@types/uni-app"],
    "rootDir": ".",
    "typeRoots": ["node_modules/@types", "types"]
  }
}
